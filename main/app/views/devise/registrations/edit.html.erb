<section>
  <div class="container clearfix page">
    <div class="page-header">
      <h2><%= t('page.user_left_menu.edit_password') %></h2>
    </div>

    <div class="page-body clearfix">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal col-offset-3 password", id: "passwordForm" }) do |f| %>
        <%= f.input :current_password, label: t('page.user.current_password') %>
        <%= f.input :password, label: t('page.user.password') %>
        <%= f.input :password_confirmation, label: t('page.user.password_confirmation') %>
        <div class="form-group text-center">
          <button type="submit" class="btn btn-default" name="signup"><%= t('page.save') %></button>
        </div>
      <% end %>
    </div>
  </div>
</section>
