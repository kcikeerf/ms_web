<section>
	<div class="container clearfix page">
		<div class="page-header bb0">
			<h2 class="text-center"><%= t('page.sign_in.forgot_password') %></h2>
		</div>

		<div class="steptitle">
			<ul>
				<li class="highlight"><span class="badge">1</span><%= t('page.user.confirm_name') %></li>
        <li><span class="badge">2</span><%= t('page.user.security_validate') %></li>
        <li><span class="badge">3</span><%= t('page.user.reset_password') %></li>
			</ul>
		</div>

		<div class="page-body clearfix">
		<%= simple_form_for(resource, as: resource_name, url: users_passwords_user_captcha_validate_path(resource_name), html: { id: 'changepassword', class: 'form-horizontal col-offset-4 password', method: :post }) do |f| %>
			
				<div class="form-group">
					<div class="row">
					<%= f.text_field :login, class: 'form-control', autofocus: 'autofocus', placeholder: t('page.user.login_placeholder') %>						
					</div>
					<%= error_message(resource, :login) %>
				</div>
				<div class="form-group">
					<div class="row captcha">
						<%= rucaptcha_input_tag(class: 'form-control', placeholder: t('page.input_captcha')) %>
						<span>
							<%= rucaptcha_image_tag(alt: 'Captcha', width: 138, height: 38) %>
						</span>
					</div>
					<%= error_message(resource, :base) %>
				</div>
				<div class="form-group">
					<div class="row">
						<button type="submit" class="btn btn-default next" name="signup"><%= t('page.next') %></button>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</section>