<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% @page_title = t('page.user_left_menu.my_home') %>
    <title><%= @page_title ? "#{@page_title}-#{t('page.site_name')}" : t('page.site_name') %></title>
    <%= stylesheet_link_tag 'default/users', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'users', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!--top filed-->
    <%= render 'shared/top' %>

    <!--personal center-->
    <%= render 'shared/user/login' %>

    <!--main work field-->
    <main>
      <section>
        <div class="container clearfix">
          <!-- Nav tabs -->
          <%= render 'shared/user/left_menu' %>
          <!-- Tab panes -->
          <%= yield :work_field%>
        </div>
      </section>
    </main>

    <!--footer field-->
    <%= area :footer do %>
      <%= render 'shared/footer' %>
      <%= render 'shared/common_dialog' %>
    <% end %>

  </body>
</html>