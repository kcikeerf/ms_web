<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= @page_title ? "#{@page_title}-#{t('page.site_name')}" : t('page.site_name') %></title>
    <%= area :head_content do %>
      <%= stylesheet_link_tag 'default/application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <% end %>
    <%= yield(:head) %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= area :top do %>
      <%= render 'shared/top' %>
    <% end %>
    <%= render 'shared/user/login' %>
    <main>
      <%= yield %>
    </main>
    <%= area :footer do %>
      <%= render 'shared/footer' %>
    <% end %>
    <%#= render 'shared/common_dialog' %>
  </body>
</html>
