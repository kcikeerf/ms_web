<section>
		<div class="container clearfix">
			<!-- Nav tabs -->
			<%= render 'shared/user/left_menu' %>

			  <!-- Tab panes -->
			  <div class="tab-content">
			    <div role="tabpanel" class="tab-pane active" id="BindingAccount">
                
					<div class="panel">

					  <!-- 绑定邮箱 -->
					  <h1 class="panel-heading bb0 clearfix">
						  <a href="/profile/account_binding" class="btn btn-link pull-right">返回</a>
						  <%=current_user.email_validate? ? '解绑邮箱' : '绑定邮箱'%>
                      </h1>
					  <div class="panel-body b1">
					    <%= simple_form_for(current_user, url: binding_or_unbinding_email_profile_path, html: {class: 'form-horizontal col-offset-4 bindingmobile', method: :post,id: "BindingEmailForm"}) do |f| %>
					    
					        <div class="form-group">
					            <%= f.text_field :email,:value=>current_user.email_validate? ? current_user.email : nil,  class: 'form-control', placeholder: "请输入要绑定的邮箱" %>
							  </div>
							  <div class="form-group captcha">
								  <%= text_field_tag :email_auth_number, '', class: 'form-control', placeholder: '邮箱验证码' %><input class="btn send" type="button" value="发送验证码" id="send_binding_email_auth_number" data-loading-text="发送中..." data-complete-text="重新获取" >
							  </div>

							<div class="form-group sub">
								<%= f.button :submit, t('page.confirm') %>
							</div>
							<%= render 'shared/error_messages', target: current_user %>
						<% end %>
					  </div>

					 </div>

			    </div>

			  </div>

		</div>
	</section>