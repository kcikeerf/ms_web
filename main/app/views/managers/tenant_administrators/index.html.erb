<th data-options="field:'user_name',align:'center', width:'10%'">用户名</th>
<th data-options="field:'name',align:'center', width:'10%'">姓名</th>
<th data-options="field:'tenant_name',align:'center', width:'10%'">Tenant</th>
<th data-options="field:'qq',align:'center', width:'10%'">QQ</th>
<th data-options="field:'phone',align:'center', width:'10%'">电话</th>
<th data-options="field:'email',align:'center', width:'15%'">邮箱</th>
<th data-options="field:'dt_update',align:'center', width:'15%'">更新时间</th>
<th data-options="field:'province_rid',align:'center', width:'5%', hidden: true">province rid</th>
<th data-options="field:'city_rid',align:'center', width:'5%', hidden: true">city rid</th>
<th data-options="field:'district_rid',align:'center', width:'5%', hidden: true">district rid</th>
<th data-options="field:'tenant_uid',align:'center', width:'5%', hidden: true">tenant uid</th>

<% content_for :form do %>
  <div class="fname">
    <label>用户名:</label>
    <%= text_field_tag :user_name, '', class: 'easyui-validatebox', required: 'true' %>
  </div>
  <div class="fsubject_class">
    <label>密码:</label>
    <%= password_field_tag :password, '', class: 'easyui-validatebox'%>
  </div>
  <div class="fsubject_class">
    <label>姓名:</label>
    <%= text_field_tag :name, '', class: 'easyui-validatebox', required: 'true' %>
  </div>
  <div class="fsubject_class">
    <label>省:</label>
    <%= select_tag :province_rid, options_from_collection_for_select(@province, 'rid', 'name_cn',@province[0].rid) , required: 'true' %>
  </div>
  <div class="fsubject_class">
    <label>市:</label>
    <%= select_tag :city_rid, options_from_collection_for_select(@city, 'rid', 'name_cn', @city[0].rid), required: 'true'   %>
  </div>
  <div class="fsubject_class">
    <label>区:</label>
    <%= select_tag :district_rid, options_from_collection_for_select(@district, 'rid', 'name_cn', @district[0].rid), required: 'true'  %>  
  </div>
  <div class="fsubject_class">
    <label>Tenant:</label>
    <%= select_tag :tenant_uid, options_from_collection_for_select([], 'uid', 'name_cn' ) ,class: 'easyui-validatebox', required: 'true'%> 
  </div>
  <div class="fsubject_class">
    <label>QQ:</label>
    <%= text_field_tag :qq, '', class: 'easyui-validatebox' %>
  </div>
  <div class="fsubject_class">
    <label>电话:</label>
    <%= text_field_tag :phone, '', class: 'easyui-validatebox' %>
  </div>
  <div class="fsubject_class">
    <label>邮箱:</label>
    <%= text_field_tag :email, '', class: 'easyui-validatebox' %>
  </div>

<% end %>