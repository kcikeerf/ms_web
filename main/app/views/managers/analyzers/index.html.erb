<th data-options="field:'user_name',align:'center', width:'5%'">用户名</th>
<th data-options="field:'name',align:'center', width:'10%'">姓名</th>
<th data-options="field:'school',align:'center', width:'10%'">学校</th>
<th data-options="field:'subject',align:'center', width:'5%'">学科</th>
<th data-options="field:'qq',align:'center', width:'10%'">QQ</th>
<th data-options="field:'phone',align:'center', width:'10%'">电话</th>
<th data-options="field:'email',align:'center', width:'10%'">邮箱</th>
<th data-options="field:'dt_update',align:'center', width:'10%'">更新时间</th>

<% content_for :form do %>
  <div class="fname">
    <label>用户名:</label>
    <%= text_field_tag :user_name, '', class: 'easyui-validatebox', required: 'true' %>
  </div>
  <div class="fsubject_class">
    <label>姓名:</label>
    <%= select_tag :name, '', class: 'easyui-validatebox', required: 'true' %>
  </div>
  <div class="fsubject_class">
    <label>学校:</label>
    <%= text_field_tag :school, '', class: 'easyui-validatebox', required: 'true' %>
  </div>
  <div class="fsubject_class">
    <label>学科:</label>
    <%= text_field_tag :subject, '', class: 'easyui-validatebox', required: 'true' %>
  </div>
  <div class="fsubject_class">
    <label>QQ:</label>
    <%= text_field_tag :qq, '', class: 'easyui-validatebox', required: 'true' %>
  </div>
  <div class="fsubject_class">
    <label>电话:</label>
    <%= text_field_tag :phone, '', class: 'easyui-validatebox', required: 'true' %>
  </div>
  <div class="fsubject_class">
    <label>邮箱:</label>
    <%= text_field_tag :email, '', class: 'easyui-validatebox', required: 'true' %>
  </div>
  <div class="fsubject_class">
    <label>更新时间:</label>
    <%= text_field_tag :dt_update, '', class: 'easyui-validatebox', required: 'true' %>
  </div>
<% end %>