<div class="easyui-tabs" style="width:90%;height:auto !important;height:100%;margin: 5px;">

	<!--Generic Permission Tab-->
    <div title="一般权限列表" style="padding:10px">
        <div style="margin:5px 0px 5px 15px;">
            <label>一般权限列表</label>
            <select class="easyui-combobox" 
                    id="permission_list" 
                    name="permissions[]"
                    multiple="true" 
                    multiline="true" 
                    style="width:400px;height:300px;"
                    data-options="valueField:'id',textField:'name',method:'GET', url:'/managers/permissions/list.json'">
                <option value=""></option>
            </select>
        </div>	

        <div style="margin:5px 0px 5px 100px;">
<!--             <a href="#" 
                onclick="$('#permission_list').combobox('reload', '/managers/permissions/list.json')"
                class="easyui-linkbutton" 
                data-options="iconCls:'icon-reload'" 
                style="width:15%">Reload</a> -->
