            <div style="float: left;">
              <%=LABEL("managers.head")%>
            </div>
            <div style="float: right;">
               <%=LABEL("managers.admin")%>ï¼š<%= current_manager.name%>
               <a href="/managers/logout" class="easyui-linkbutton"><%= LABEL("page.user_left_menu.logout")%></a>
            </div>
        </div>
        <%= render 'shared/manager/left' %>
        <div id="mainPanle" region="center" style="background: #eee; overflow-y:hidden">
            <div id="tabs" class="easyui-tabs"  fit="true" border="false" >
                <div title="<%=LABEL("managers.panel.welcome")%>" style="padding:20px;overflow:hidden;" id="home">
                    
                <h1><%=LABEL("managers.messages.welcome")%></h1>

                </div>
            </div>
        </div>
    </div>
  </body>
</html>
