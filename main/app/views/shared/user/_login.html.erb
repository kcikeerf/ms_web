<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-body">
				<h4 class="modal-title text-center" id="LoginModalLabel"><%= t('page.login') %></h4>

				<!-- The form is placed inside the body of modal -->
				<%= form_for(@login_user, url: session_path(@login_user), html: {class: 'form-horizontal'}, remote: true) do |f| %>
				<%= hidden_field_tag :url, '' %>

				<div class="form-group">
					<div class="col-md-12">
						<%= f.text_field :login, placeholder: t('page.sign_in.login_placeholder'), class: 'form-control' %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-12">
						<%= f.password_field :password, placeholder: t('page.sign_up.password_placeholder') , class: 'form-control' %>							
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-12">
						<%#= submit_tag t('page.login'), class: 'btn btn-primary' %>
						<button type="submit" class="btn btn-primary"><%= t('page.login') %></button>
					</div>
				</div>
				<div class="checkbox">
					<label>
						<input type="checkbox" checked='checked'> <%= t('page.sign_in.remember_me') %>
					</label>
					<label class='pull-right'>
						<%= link_to t('page.sign_in.forgot_password'), new_user_password_path %>
					</label>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>