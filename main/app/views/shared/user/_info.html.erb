<h1 class="panel-heading clearfix">
	<button class="btn btn-default edit" type="button">
		<i class="glyphicon glyphicon-pencil"></i>
		编辑
	</button>
	个人信息
</h1>

<div class="panel-body">
	
	<%= render 'shared/user/upload_avatar' %>

    <!--展示信息-->
	<div id="basicinfo-view">
		<div id="basicinfo" class="form-horizontal basicinfo">
			<%= render 'profiles/info' %>
		</div>
	</div>

    <!--可编辑信息-->
	<div id="basicinfo-edit" style="display:none;">
		<%= simple_form_for(current_user.role_obj, 
			url: save_info_profile_path, 
			html: {class: 'form-horizontal basicinfo', method: :post}, 
			remote: true) do |f| %>

			<% edittable_info_items.each do |item| %>
			<%= render :partial => "shared/user/items/#{item}",locals: {f: f} %>
			<% end %>

			<div class="form-group">
				<%= f.button :submit, LABEL("page.common.save") %>
			</div>
		<% end %>
	</div>
	<%= hidden_field_tag 'affirm' %>
</div>

